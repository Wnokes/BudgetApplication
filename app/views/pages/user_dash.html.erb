<h1>Pages#user_dash</h1>
<p>Find me in app/views/pages/user_dash.html.erb</p>

<%= link_to "Debts", "/debt_accounts"%>

<table>
  <thead>
    <tr>
      <th>Account name</th>
      <th>Principle</th>
      <th>Interest rate</th>
      <th>Minimum payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debt_accounts.each do |debt_account| %>
      <tr>
        <td><%= debt_account.account_name %></td>
        <td><%= debt_account.principle %></td>
        <td><%= debt_account.interest_rate %></td>
        <td><%= debt_account.minimum_payment %></td>
        <td><%= link_to 'Show', debt_account %></td>
        <td><%= link_to 'Edit', edit_debt_account_path(debt_account) %></td>
        <td><%= link_to 'Destroy', debt_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>